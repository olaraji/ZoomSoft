<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="HABITS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/daily"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:backgroundTint="#32413A"
        android:text="Daily"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/list"
        tools:layout_editor_absoluteY="78dp" />

    <Button
        android:id="@+id/list"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:backgroundTint="#32413A"
        android:text="LIST"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="78dp" />

    <Button
        android:id="@+id/profile"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:backgroundTint="#32413A"
        android:text="Profile"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/daily"
        tools:layout_editor_absoluteY="78dp" />


    <Button
        android:id="@+id/userName"
        android:layout_width="202dp"
        android:layout_height="105dp"
        android:backgroundTint="#32413A"
        android:text="@string/userName"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/friends"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:backgroundTint="#32413A"
        android:text="friends"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="308dp" />



    <Button
        android:id="@+id/receivedRequests"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:backgroundTint="#32413A"
        android:text="Received Requests"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="375dp" />

    <Button
        android:id="@+id/pendingRequests"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:backgroundTint="#32413A"
        android:text="Pending Requests"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="433dp" />

    <Button
        android:id="@+id/addFriend"
        android:layout_width="322dp"
        android:layout_height="89dp"
        android:backgroundTint="#32413A"
        android:text="ADD Friend"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="572dp" />


</androidx.constraintlayout.widget.ConstraintLayout>